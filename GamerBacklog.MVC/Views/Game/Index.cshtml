                    <td>{{item.Valor | currency}}</td>
                    <td>{{item.ValorTotal | currency}}</td>
                    <td>
                        <button type="button" ng-click="ExcluirItem($index)" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            </table>*@

        </div>
    </div>

</form>


